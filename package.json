{
  "name": "cortex",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "build:docs": "npm run build && node scripts/build-docs.js",
    "test:compile": "tsc --project tsconfig.test.json",
    "test:run": "node --test dist-tests/tests/**/*.test.js dist/ui/**/*.test.js",
    "test": "npm run test:compile && npm run test:run",
    "test:watch": "tsc --project tsconfig.test.json --watch & node --test --watch dist-tests/tests/**/*.test.js dist/ui/**/*.test.js",
    "test:debug": "node --inspect-brk --test dist-tests/tests/**/*.test.js dist/ui/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage dist-tests/tests/**/*.test.js dist/ui/**/*.test.js",
    "test:single": "npm run test:compile && node --test",
    "pretest": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/node": "^24.8.1",
    "lit": "^3.3.1",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
