# Cortex Website Configuration

# Server
PORT=3000
NODE_ENV=development

# External Links (for social media and resources)
GITHUB_URL=https://github.com/cortex-web-framework/cortex
TWITTER_URL=https://twitter.com/cortex_framework
LINKEDIN_URL=https://linkedin.com/company/cortex-framework
DISCORD_URL=https://discord.gg/cortex

# Features
ENABLE_PERSISTENCE=true
ENABLE_CACHING=true
ENABLE_LOGGING=true

# Data
DATA_DIR=./data

# API
API_TIMEOUT=30000
API_MAX_REQUEST_SIZE=10mb

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
