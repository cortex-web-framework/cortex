{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/ui-test-compiled",
    "target": "es2020",
    "module": "es2022",
    "rootDirs": ["./src", "./tests"]
  },
  "include": [
    "src/ui-test/**/*.ts",
    "src/ui/**/*.ts",
    "src/ui/**/*.test.ts",
    "tests/ui/components/**/*.ts",
    "tests/ui/components/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-test",
    "dist/ui-test-compiled"
  ]
}