{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Test-specific overrides
    "outDir": "./dist-tests",
    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "removeComments": false,
    "noEmitOnError": true,
    "skipLibCheck": false,
    
    // Maximum strictness (inherits from base config)
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": false,
    
    // Module system - match base config for consistency
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    
    // Environment - Node.js for tests (must include Node types)
    "target": "ES2016",
    "lib": ["ES2016"],
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    
    // Include Node.js types for testing (minimal dependency)
    "types": ["node"],
    
    // TDD optimizations
    "incremental": true,
    "tsBuildInfoFile": "./dist-tests/.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-tests"
  ]
}