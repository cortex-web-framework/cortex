{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-tests",
    "target": "es2020",
    "module": "es2022",
    "rootDirs": ["./src", "./tests"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-examples",
    "dist-tests"
  ]
}